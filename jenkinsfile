pipeline {
    agent any

    tools {
        jdk 'JDK 21'
    }

    environment {
        PATH = "${tool 'JDK 21'}/bin:${env.PATH}"
    }

    parameters {
        string(name: 'NAME', defaultValue: 'John', description: 'Enter your name')
        string(name: 'AGE', defaultValue: '29', description: 'Enter your age')
        string(name: 'GENDER', defaultValue: 'Male', description: 'Enter gender (Male/Female/Other)')
        string(name: 'LANGUAGE', defaultValue: 'Java', description: 'Enter preferred language')
        string(name: 'CITY', defaultValue: 'Goa', description: 'Enter your city')
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Naval4206/Java-App.git'
            }
        }

        stage('Build') {
            steps {
                sh 'javac FormApp.java'
            }
        }

        stage('Run') {
            steps {
                sh """
                    echo -e "${params.NAME}\\n${params.AGE}\\n${params.GENDER}\\n${params.LANGUAGE}\\n${params.CITY}" | java FormApp
                """
            }
        }
    }
}
